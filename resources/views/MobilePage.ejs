<div id="Container">
    <%- include('./common/navbar'); %>

        <!-- ==================Top-header-End================= -->
        <header id="header">
            <div id="HeaderSwiper" class="swiper">
                <div id="tabs" class="swiper-wrapper">
                    <a class="swiper-slide btn" href="/">
                        <div>
                            <i class="fas fa-home"></i> All product
                        </div>
                    </a>
                    <a class="btn swiper-slide" id="electronic_btn" href="./electronicproduct">
                        <i class="fas fa-desktop"></i>
                        Electronics
                    </a>
                    <a href="./toysproducts" id="toys_btn" class="btn swiper-slide">
                        <i class="fab fa-evernote"></i>
                        Toys
                    </a>
                    <a href="./clothproducts" id="cloths_btn" class="btn swiper-slide">
                        <i class="fas fa-tshirt"></i> Cloths
                    </a>

                    <a href="./babyclothproducts" id="baby_btn" class="btn swiper-slide">
                        <i class="fas fa-baby"></i> Baby Cloths
                    </a>
                    <a href="./mobileproducts" id="mobile_btn" class="btn swiper-slide active">
                        <i class="fas fa-mobile-alt"></i> Mobile
                    </a>
                    <a href="./furnitureproducts" id="furniture_btn" class="btn swiper-slide">
                        <i class="fas fa-couch"></i> Furniture
                    </a>
                    <a href="./groceriesproducts" id="groceries_btn" class="btn swiper-slide">
                        <i class="fas fa-mortar-pestle"></i>
                        Groceries
                    </a>
                    <a href="./gameproducts" id="game_btn" class="btn swiper-slide">
                        <i class="fab fa-playstation"></i> Games
                    </a>
                    <a href="./computerproducts" id="computer_btn" class="btn swiper-slide">
                        <i class="fas fa-laptop"></i> Computer
                    </a>
                </div>
            </div>

            <div class="search">
                <input class="search_input" id="searchInput" type="text" placeholder="Search for products">
                <i class="fas fa-search"></i>
            </div>
        </header>

        <div class="overlay"></div>

        <!-- ==================Bottom-header-End============== -->

        <main class="pages">
            <div id="mobile_page" class="page mobile is-active">
                <div class="banner_container">
                    <div id="mySwiper" class="swiper mySwiper d-md-block d-none">
                        <div class="swiper-wrapper">
                            <div class="swiper-slide">
                                <a href="./productdetails" target="_blank"
                                    data-productid="<%= JSON.stringify(onePlus) %>">
                                    <img loading="lazy" decoding="async" src="../img/banner.png" alt="banner_images">
                                </a>
                            </div>
                            <div class="swiper-slide">
                                <a href="./productdetails" target="_blank"
                                    data-productid="<%= JSON.stringify(miPhone) %>">
                                    <img loading="lazy" decoding="async" src="../img/phoneBanner1.png"
                                        alt="banner_images">
                                </a>
                            </div>
                            <div class="swiper-slide">
                                <a href="./productdetails" target="_blank"
                                    data-productid="<%= JSON.stringify(iphone12) %>">
                                    <img loading="lazy" decoding="async" src="../img/phoneBanner.png"
                                        alt="banner_images">
                                </a>
                            </div>
                            <div class="swiper-slide">
                                <a href="./productdetails" target="_blank"
                                    data-productid="<%= JSON.stringify(vivoZ6) %>">
                                    <img loading="lazy" decoding="async" src="../img/phoneBanner2.png"
                                        alt="banner_images">
                                </a>
                            </div>
                        </div>
                        <div id="Left" class="swiper-button-prev">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px"
                                fill="#fff">
                                <path d="M0 0h24v24H0V0z" fill="none" opacity=".87" />
                                <path
                                    d="M16.62 2.99c-.49-.49-1.28-.49-1.77 0L6.54 11.3c-.39.39-.39 1.02 0 1.41l8.31 8.31c.49.49 1.28.49 1.77 0s.49-1.28 0-1.77L9.38 12l7.25-7.25c.48-.48.48-1.28-.01-1.76z" />
                            </svg>
                        </div>
                        <div id="Right" class="swiper-button-next">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px"
                                fill="#fff">
                                <path d="M24 24H0V0h24v24z" fill="none" opacity=".87" />
                                <path
                                    d="M7.38 21.01c.49.49 1.28.49 1.77 0l8.31-8.31c.39-.39.39-1.02 0-1.41L9.15 2.98c-.49-.49-1.28-.49-1.77 0s-.49 1.28 0 1.77L14.62 12l-7.25 7.25c-.48.48-.48 1.28.01 1.76z" />
                            </svg>
                        </div>

                    </div>
                    <!-- ==============Mobile View============= -->
                    <div id="mySwiper2" class="swiper mySwiper d-md-none d-block">
                        <div class="swiper-wrapper">
                            <div class="swiper-slide">
                                <a href="./productdetails" target="_blank"
                                    data-productid="<%= JSON.stringify(onePlus) %>">
                                    <img loading="lazy" decoding="async" src="../img/mobile_banner.png"
                                        alt="mobile_view_img">
                                </a>
                            </div>
                            <div class="swiper-slide">
                                <a href="./productdetails" target="_blank"
                                    data-productid="<%= JSON.stringify(iphone12) %>">
                                    <img loading="lazy" decoding="async" src="../img/mobilePhone2.png"
                                        alt="mobile_view_img">
                                </a>
                            </div>
                            <div class="swiper-slide">
                                <a href="./productdetails" target="_blank"
                                    data-productid="<%= JSON.stringify(miPhone) %>">
                                    <img loading="lazy" decoding="async" src="../img/mobilePhone1.png"
                                        alt="mobile_view_img">
                                </a>
                            </div>
                            <div class="swiper-slide">
                                <a href="./productdetails" target="_blank"
                                    data-productid="<%= JSON.stringify(vivoZ6) %>">
                                    <img loading="lazy" decoding="async" src="../img/mobilePhone.png"
                                        alt="mobile_view_img">
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- ==============Advertisement=========== -->
                    <div class="banner_box">
                        <img src="../img/BannerBoxMobiles.png" alt="banner_box_img">
                        <video preload="auto" muted loop autoplay>
                            <source src="../video/mobiles.mp4" type="video/mp4">
                        </video>
                        <div class="box_content">
                            <h4>Mobiles Trend's in 2022</h4>
                            <p class="mb-0">OnePlus Mobiles Phone's</p>
                        </div>
                    </div>
                </div>
                <!-- ===================Banner-Container-End================= -->
                <div class="product_card">
                    <div id="card_section">
                        <div class="card_container">
                            <!-- Mobile Cards -->
                            <% mob.forEach(function(ele) { %>
                                <div id="<%= ele.id %>" class="cards <%= ele.category %>">
                                    <div class="card_head">
                                        <button role="button" data-wishlist="<%= JSON.stringify(ele) %>" id="far">
                                            <i class="far fa-heart"></i>
                                            <span></span>
                                            <span></span>
                                            <span></span>
                                            <span></span>
                                            <span></span>
                                            <span class="four"></span>
                                        </button>
                                    </div>
                                    <div class="card_image">
                                        <img src="<%= ele.image %>" loading="lazy" decoding="async" alt="cards_img">
                                    </div>
                                    <div class="card_heading">
                                        <h5 class="mb-0">
                                            <%= ele.title %>
                                        </h5>
                                        <div class="card_price">
                                            <span>₹<%= new Intl.NumberFormat().format(ele.MRP) %></span>
                                            <span class="pro_price">₹<%= new Intl.NumberFormat().format(ele.price) %>
                                            </span>
                                        </div>
                                        <div class="card_star">
                                            <i class="<%=
                                    ele.rating >= 1
                                ? 'fas fa-star'
                                : ele.rating >= 0.5
                                ? 'fas fa-star-half-alt'
                                : 'far fa-star'
                            %>
                            "></i>

                                            <i class="<%=
                                    ele.rating >= 2
                                ? 'fas fa-star'
                                : ele.rating >= 1.5
                                ? 'fas fa-star-half-alt'
                                : 'far fa-star'
                            %>
                            "></i>

                                            <i class="<%=
                                    ele.rating >= 3
                                ? 'fas fa-star'
                                : ele.rating >= 2.5
                                ? 'fas fa-star-half-alt'
                                : 'far fa-star'
                            %>
                            "></i>

                                            <i class="<%=
                                    ele.rating >= 4
                                ? 'fas fa-star'
                                : ele.rating >= 3.5
                                ? 'fas fa-star-half-alt'
                                : 'far fa-star'
                            %>
                              "></i>

                                            <i class="<%=
                                    ele.rating >= 5
                                ? 'fas fa-star'
                                : ele.rating >= 4.5
                                ? 'fas fa-star-half-alt'
                                : 'far fa-star'
                            %>
                            "></i>
                                        </div>
                                    </div>
                                    <div class="addToCart">
                                        <div class="cards_addit">
                                            <a href="./productdetails" target="_blank">
                                                <div data-productid="<%= JSON.stringify(ele) %>" class="card_add">
                                                    <i class="fa fa-plus"></i>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div id="card_pricing_btn">
                                        <button data-addtocart="<%= JSON.stringify(ele) %>" role="button"
                                            class="one_btn">
                                            <span>
                                                <i class="fas fa-shopping-cart"></i> Add to Cart
                                            </span>
                                        </button>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                </div>
                <!-- ===============Product Container End==================== -->
                <div id="banner__">
                    <a href="./productdetails" target="_blank" data-productid="<%= JSON.stringify(samsungS21) %>">
                        <img class="deskTop" src="../img/Mobile_Add.png" alt="banner-img">
                        <img class="mobile" src="../img/Mobile_Phone_Add.png" alt="banner-img">
                    </a>
                </div>
                <!-- ===============Banner__ Container End=================== -->

            </div>
            <!-- data-page="6" -->
            <div id="addToCartPopup">
                <div class="content">
                    <span>
                        <i class="fas fa-check"></i>
                        Successfull added to cart
                    </span>
                </div>
            </div>
        </main>

        <!-- ================================================= -->

        <%- include('./common/offers_containers'); %>

            <!-- ====================Upcoming Offers================== -->

</div>

<!-- ==========Container End======== -->

