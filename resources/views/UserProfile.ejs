<body>
    <div id="Container">
        <%- include('./common/navbar'); %>

            <!-- ==================Top-header-End================= -->
            <div id="UserPages">
                <div class="user_container">
                    <div class="top_container">
                        <div class="leftTopContainer">
                            <div class="images">
                                <% if(userProfile) { %>

                                    <img src="../UserImgUpload/<%= userProfile %>" alt="user_images">
                                    <% }else { %>
                                        <img src="../img/user-secret-solid.svg" alt="user_images">
                                        <% } %>

                                            <!-- <div class="button" id="uploadImageBtn">
                                                <button type="button">
                                                    <i class="fas fa-camera"></i>
                                                </button>
                                            </div> -->
                            </div>
                            <div class="UserContent">
                                <div class="UserName">
                                    <h1>
                                        <%= userData ? userData.name : "Your Name" %>
                                    </h1>
                                </div>
                                <div id="hr"></div>
                                <div class="details">
                                    <div class="emailDetails">
                                        <h3>
                                            Email : <span>
                                                <%= userData ? userData.email : "Email ID" %>
                                            </span>
                                        </h3>
                                    </div>
                                    <div class="numberDetails">
                                        <h3>
                                            Phone number :
                                            <span>
                                                <%= userData ? userData.phone : "Phone number" %>
                                            </span>
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="rightTopContainer">
                            <div class="button">
                                <button id="EditUserData" type="button">Edit</button>
                            </div>
                        </div>
                    </div>
                    <!-- ======================Top Containers End==================== -->
                    <div class="bottom_container">
                        <div class="contents">
                            <ul>
                                <li>
                                    <div class="collapse_content">
                                        <div class="content">
                                            <i class="fas fa-heart"></i>
                                            <div class="text">
                                                <span class="title">Wishlist</span>
                                                <span class="para">All your product collection</span>
                                            </div>
                                        </div>
                                        <i class="arrow fas fa-chevron-right"></i>
                                    </div>
                                    <div class="collapse">
                                        <div class="content">
                                            <div class="order_details">
                                                <h5>Wishlist items : <span>
                                                        <%= wishlist ? wishlist.length : '0' %>
                                                    </span></h5>
                                                <div class="hr"></div>
                                                <a type="button" href="/wishlistpage" target="_blank">View Wishlist
                                                    <span></span></a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="collapse_content">
                                        <div class="content">
                                            <i class="fas fa-shipping-fast"></i>
                                            <div class="text">
                                                <span class="title">Orders</span>
                                                <span class="para">Check your order status</span>
                                            </div>
                                        </div>
                                        <i class="arrow fas fa-chevron-right"></i>
                                    </div>
                                    <div class="collapse">
                                        <div class="order_details">
                                            <h5>Order : <span>
                                                    <%= orders ? orders.length : '0' %>
                                                </span></h5>
                                            <div class="hr"></div>
                                            <a type="button" href="/orderpage" target="_blank">Show Orders
                                                <span></span></a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="collapse_content">
                                        <div class="content">
                                            <i class="fas fa-shopping-cart"></i>
                                            <div class="text">
                                                <span class="title">Products Cart</span>
                                                <span class="para">Check your carts for faster checkout</span>
                                            </div>
                                        </div>
                                        <i class="arrow fas fa-chevron-right"></i>
                                    </div>
                                    <div class="collapse">
                                        <div class="order_details">
                                            <h5>Product in cart :
                                                <span>
                                                    <%= cart ? cart.totalQTY : "0" %>
                                                </span>
                                            </h5>
                                            <div class="hr"></div>
                                            <a type="button" href="/cartpage">View Cart Items <span></span></a>
                                        </div>
                                    </div>
                                </li>

                                <li>
                                    <div class="collapse_content">
                                        <div class="content">
                                            <i class="fas fa-street-view"></i>
                                            <div class="text">
                                                <span class="title">Addressess</span>
                                                <span class="para">Save addresses for a hassle-free checkout</span>
                                            </div>
                                        </div>
                                        <i class="arrow fas fa-chevron-right"></i>
                                    </div>
                                    <div class="collapse">
                                        <div class="order_details">
                                            <h5>Your address :
                                                <span>
                                                    <%= userData ? userData.address : "Your-address" %>
                                                </span>
                                            </h5>
                                        </div>
                                    </div>
                                </li>

                                <div class="buttons">
                                    <form id="logout" action="/logout" method="POST">
                                        <button id="LogoutBtn" onclick="document.getElementById('logout')"
                                            type="submit">
                                            <i class="fas fa-trash-alt"></i>
                                            Logout
                                        </button>
                                    </form>
                                </div>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

