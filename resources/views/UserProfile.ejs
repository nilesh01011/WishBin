                <div class="container">
                    <div class="overlay"></div>
                    <div class="container_wrapper">
                        <div class="dismiss">
                            <i class="fas fa-times"></i>
                        </div>
                        <div class="contents">
                            <div class="images">
                                <img src="../img/upload_image_icons.png" alt="upload-image-icons">
                            </div>
                            <div class="heading">
                                Drop your image here , or <span id="uploadImageBrowser">browser</span>
                                <input type="file" id="uploadImageInput" name="file" hidden>
                            </div>
                        </div>

                        <div class="buttons">
                            <a href="/userprofile">Submit</a>
                        </div>
                    </div>
                </div>
            </div> -->
    </div>
    <!-- ==================Container End================= -->

    <!-- =====================SideBar Sections================ -->
    <div id="overlay"></div>

    <%- include('./common/sidebar'); %>

        <%- include('./common/footer'); %>

            <!-- ===================================================== -->
            <!-- ======================Script========================= -->
            <!-- =======================Main CDN====================== -->
            <script src="../JS/main.js"></script>
            <script src="../JS/Cart.js"></script>
            <script src="../JS/WishList.js"></script>

            <script>
                window.addEventListener('scroll', () => {
                    if (window.scrollY >= 40) {
                        document.querySelector('nav.navbar').style.boxShadow =
                            ' 0 3px 6px rgba(0, 0, 0, 0.3)';
                        document.querySelector('nav.navbar').style.position =
                            'sticky';
                        document.querySelector('nav.navbar').style.top =
                            '0';
                    } else {
                        document.querySelector('nav.navbar').style.boxShadow = 'none';
                        document.querySelector('nav.navbar').style.position =
                            'none';
                        document.querySelector('nav.navbar').style.top =
                            '0';
                    }
                });
            </script>