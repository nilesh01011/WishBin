<div id="Container">
    <%- include('./common/navbar'); %>


        <!-- ==================Top-header-End================= -->
        <header id="header">
            <div id="HeaderSwiper" class="swiper">
                <div id="tabs" class="swiper-wrapper">
                    <a class="swiper-slide btn" href="/">
                        <div>
                            <i class="fas fa-home"></i> All product
                        </div>
                    </a>
                    <a class="btn swiper-slide" id="electronic_btn" href="./electronicproduct">
                        <i class="fas fa-desktop"></i>
                        Electronics
                    </a>
                    <a href="./toysproducts" id="toys_btn" class="btn swiper-slide">
                        <i class="fab fa-evernote"></i>
                        Toys
                    </a>
                    <a href="./clothproducts" id="cloths_btn" class="btn swiper-slide">
                        <i class="fas fa-tshirt"></i> Cloths
                    </a>

                    <a href="./babyclothproducts" id="baby_btn" class="btn swiper-slide">
                        <i class="fas fa-baby"></i> Baby Cloths
                    </a>
                    <a href="./mobileproducts" id="mobile_btn" class="btn swiper-slide">
                        <i class="fas fa-mobile-alt"></i> Mobile
                    </a>
                    <a href="./furnitureproducts" id="furniture_btn" class="btn swiper-slide">
                        <i class="fas fa-couch"></i> Furniture
                    </a>
                    <a href="./groceriesproducts" id="groceries_btn" class="btn swiper-slide">
                        <i class="fas fa-mortar-pestle"></i>
                        Groceries
                    </a>
                    <a href="./gameproducts" id="game_btn" class="btn swiper-slide">
                        <i class="fab fa-playstation"></i> Games
                    </a>
                    <a href="./computerproducts" id="computer_btn" class="btn swiper-slide">
                        <i class="fas fa-laptop"></i> Computer
                    </a>
                </div>
            </div>

            <div class="search">
                <input class="search_input" id="searchInput" type="text" placeholder="Search for products">
                <i class="fas fa-search"></i>
            </div>
        </header>

        <div class="overlay"></div>

        <!-- ==================Bottom-header-End============== -->

        <main id="contactUs" class="container-fluid">
            <div class="container">
                <div class="heading">
                    <h1>Contact Us</h1>
                </div>

                <div class="hr"></div>

                <!-- body content -->

                <div class="wrapper">
                    <div class="wrapper_container">
                        <div class="left">
                            <form action="/contactus" method="post">
                                <div class="input_wrapper">
                                    <label for="name">Full name</label>
                                    <input name="name" type="text"
                                        class="<%= messages.emptycontactusmessage ? 'emptyField' : '' %>"
                                        value="<%= messages.previousname ? messages.previousname : '' %>"
                                        placeholder="What's your full name" autocomplete="off">
                                    <div id="error">
                                        <%= messages.emptycontactusmessage %>
                                    </div>
                                </div>
                                <div class="input_wrapper">
                                    <label for="email">Email address</label>
                                    <input name="email" type="text"
                                        class="<%= messages.emptycontactusmessage ? 'emptyField' : '' %>"
                                        value="<%= messages.previouemail ? messages.previouemail : '' %>"
                                        placeholder="example@gmail.com" autocomplete="off">
                                    <div id="error">
                                        <%= messages.emptycontactusmessage %>
                                    </div>
                                </div>
                                <div class="input_wrapper">
                                    <label for="name">Message</label>
                                    <textarea name="message"
                                        class="<%= messages.emptycontactusmessage ? 'emptyField' : '' %>"
                                        value="<%= messages.previousmessage ? messages.previousmessage : '' %>"
                                        placeholder="Write your message here"></textarea>
                                    <div id="error">
                                        <%= messages.emptycontactusmessage %>
                                    </div>
                                </div>

                                <div class="buttons">
                                    <button type="submit">
                                        <i class="fas fa-paper-plane"></i>
                                        Send message
                                        </butt>
                                </div>


                                <% if(messages.successfullsend){ %>
                                    <div id="messages">
                                        <span>
                                            <i class="far fa-envelope"></i>
                                            <%= messages.successfullsend %>
                                        </span>
                                    </div>
                                    <% } %>

                            </form>
                        </div>

                        <div class="right">
                            <div class="images">
                                <img src="../img/contactUsImg.png" alt="contactus-image">
                            </div>
                        </div>
                    </div>

                    <div class="mainContent">

                        <style>
                            #contactUs .container .wrapper .mainContent .wave {
                                background: url('../img/Vector.svg') repeat-x;
                            }
                        </style>

                        <div class="wave"></div>
                        <div class="wave"></div>
                    </div>
                </div>
            </div>
        </main>
</div>

<!-- ==========Container End======== -->

<div id="preloader">
    <div class="loading_container">
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>

<!-- =====================SideBar Sections================ -->
<div id="overlay"></div>

<%- include('./common/sidebar'); %>

    <%- include('./common/footer'); %>

