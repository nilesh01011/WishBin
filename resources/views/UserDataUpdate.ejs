<div id="Container">
    <%- include('./common/navbar'); %>

        <!-- ==================Top-header-End================= -->

        <div id="UserDataUpdate">
            <div class="updateContainer">
                <form method="POST" id="updateUserData">
                    <div class="heading">
                        <h3>Edit Details</h3>
                    </div>

                    <div class="hr"></div>

                    <div class="bottomDataDetails">
                        <div class="input_content">
                            <label>User Name</label>
                            <input type="text" value="<%= userData.name %>" name="name" placeholder="Your Name">
                        </div>
                        <div class="input_content">
                            <label>Email Id</label>
                            <input type="email" value="<%= userData.email %>" disabled placeholder="Your Email"
                                name="email">
                        </div>
                        <div class="input_content">
                            <label>Phone Number</label>
                            <input type="text" value="<%= userData.phone %>" type="phone" name="phone"
                                placeholder="Phone Number" maxlength="10">
                        </div>
                        <div class="input_content pass">
                            <label>Old Password</label>
                            <div class="field">
                                <div class="inputContent">
                                    <input type="password" name="password" value="" placeholder="Old Password">
                                    <i id="eye_lock" class="far fa-eye-slash"></i>
                                </div>
                                <span style="font-size: 12px; color:#ea5455;">
                                    <%= messages.invalidpassword %>
                                </span>
                            </div>

                        </div>

                        <div class="input_content pass">
                            <label>New Password</label>
                            <div class="field">
                                <div class="inputContent">
                                    <input type="password" name="newpassword" value="" placeholder="New Password">
                                    <i id="eye_lock" class="far fa-eye-slash"></i>
                                </div>
                                <span style="font-size: 12px; color:#ea5455;">
                                    <%= messages.emptypassword %>
                                </span>
                            </div>
                        </div>

                        <div class="input_content">
                            <label>Addressess</label>
                            <input type="text" value="<%= userData.address %>" name="address"
                                placeholder="Your Address">
                        </div>

                    </div>

                    <div class="hr_2"></div>

                    <div class="buttons">
                        <input type="hidden" name="<%= admin==='admin' || admin==='super_admin' ? 'adminPage' : '' %>"
                            id="user">
                        <button id="cancleUpdateBtn" class="cancle" type="button">CANCLE</button>

                        <button class="submit" type="submit">SAVE DETAILS</button>
                    </div>
                </form>
            </div>
        </div>
</div>
<!-- ==================Container End================= -->

<div id="preloader">
    <div class="loading_container">
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>

<!-- =====================SideBar Sections================ -->
<div id="overlay"></div>

<%- include('./common/sidebar'); %>

    <%- include('./common/footer'); %>

