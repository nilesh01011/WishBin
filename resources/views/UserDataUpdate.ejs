        <!-- ======================Script========================= -->
        <!-- =======================Main CDN====================== -->
        <script src="../JS/main.js"></script>
        <script src="../JS/Cart.js"></script>
        <script src="../JS/WishList.js"></script>
        <script src="../JS/UpdateUserData.js"></script>

        <script>
            window.addEventListener('scroll', () => {
                if (window.scrollY >= 40) {
                    document.querySelector('nav.navbar').style.boxShadow =
                        ' 0 3px 6px rgba(0, 0, 0, 0.3)';
                    document.querySelector('nav.navbar').style.position =
                        'sticky';
                    document.querySelector('nav.navbar').style.top =
                        '0';
                } else {
                    document.querySelector('nav.navbar').style.boxShadow = 'none';
                    document.querySelector('nav.navbar').style.position =
                        'none';
                    document.querySelector('nav.navbar').style.top =
                        '0';
                }
            });

            let eye_lock = document.querySelectorAll('#eye_lock'),
                passInput = document.querySelectorAll("#updateUserData .bottomDataDetails .input_content.pass .field input");


            for (let i = 0; i < eye_lock.length; i++) {
                eye_lock[i].addEventListener('click', () => {
                    if (passInput[i].type === 'password') {
                        passInput[i].type = 'text';
                        eye_lock[i].classList.add('fa-eye');
                        eye_lock[i].classList.remove('fa-eye-slash');
                    } else {
                        passInput[i].type = 'password';
                        eye_lock[i].classList.remove('fa-eye');
                        eye_lock[i].classList.add('fa-eye-slash');
                    }
                });
            }

        </script>

        </body>

        </html>